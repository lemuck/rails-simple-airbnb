<div class="container">
  <div class="flat">

  	<h1> Add your flat! </h1>
    <div class="form">
      <%= simple_form_for(@flat) do |f| %>
      <%= f.input  :name %>
      <%= f.input  :description %>
      <%= f.input  :price_per_night %>
      <%= f.input  :number_of_guests %>
      <%= f.button :submit, class: 'btn btn-success' %>
      <% end %>
    </div>

    <%= link_to 'Home', flats_path, class: 'btn btn-primary' %>

  </div>
</div>